# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
DIRECT_URL="postgresql://user:password@host:5432/database"
DATABASE_URL="postgresql://user:password@host:6543/database?pgbouncer=true"

# Redis Configuration
REDIS_URL="redis://username:password@host:port"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"
JWT_EXPIRES_IN="7d"

# OpenAI Configuration (for AI Tutor feature)
OPENAI_API_KEY="sk-..."

# Cache Configuration (in seconds)
CACHE_TTL_QUESTIONS=3600
CACHE_TTL_EXPLANATIONS=86400

# PayMongo Configuration
# Get your keys from: https://dashboard.paymongo.com/developers
PAYMONGO_SECRET_KEY="sk_test_..."
PAYMONGO_PUBLIC_KEY="pk_test_..."

# Payment Configuration
SEASON_PASS_PRICE=399
SEASON_PASS_CURRENCY="PHP"

# Frontend URL (for payment redirect)
FRONTEND_URL="https://your-frontend.vercel.app"

# Free Tier Limits
# Number of practice questions free users can answer per day
FREE_TIER_PRACTICE_LIMIT_PER_DAY=15
# Maximum number of questions in mock exams for free users
FREE_TIER_MOCK_EXAM_QUESTIONS_LIMIT=20
# Number of mock exams free users can take per month
FREE_TIER_MOCK_EXAMS_PER_MONTH=3
