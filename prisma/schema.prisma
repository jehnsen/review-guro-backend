// Prisma Schema for ReviewGuro - Civil Service Exam Reviewer
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum QuestionCategory {
  VERBAL_ABILITY
  NUMERICAL_ABILITY
  ANALYTICAL_ABILITY
  GENERAL_INFORMATION
  CLERICAL_ABILITY
}

enum ExamStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

// ============================================
// MODELS
// ============================================

/// User model - Represents registered users of the platform
model User {
  id             String    @id @default(uuid()) @db.Uuid
  email          String    @unique @db.VarChar(255)
  passwordHash   String    @map("password_hash") @db.VarChar(255)
  firstName      String?   @map("first_name") @db.VarChar(100)
  lastName       String?   @map("last_name") @db.VarChar(100)
  photoUrl       String?   @map("photo_url") @db.VarChar(500)
  examDate       DateTime? @map("exam_date")
  role           UserRole  @default(USER)
  isPremium      Boolean   @default(false) @map("is_premium")
  premiumExpiry  DateTime? @map("premium_expiry")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Relations
  progress            UserProgress[]
  mockExams           MockExam[]
  settings            UserSettings?
  subscription        Subscription?
  refreshTokens       RefreshToken[]
  paymentVerifications PaymentVerification[]

  @@index([email])
  @@index([role])
  @@map("users")
}

/// Question model - Stores exam questions with options and explanations
model Question {
  id              String           @id @default(uuid()) @db.Uuid
  category        QuestionCategory
  difficulty      Difficulty
  questionText    String           @map("question_text") @db.Text
  options         Json             @db.JsonB // Array of { id: string, text: string }
  correctOptionId String           @map("correct_option_id") @db.VarChar(50)
  explanationText String?          @map("explanation_text") @db.Text
  aiExplanation   String?          @map("ai_explanation") @db.Text // Cached AI-generated explanation
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  // Relations
  userProgress UserProgress[]

  @@index([category])
  @@index([difficulty])
  @@index([category, difficulty])
  @@map("questions")
}

/// UserProgress model - Tracks user attempts on questions
model UserProgress {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  questionId  String   @map("question_id") @db.Uuid
  selectedOptionId String @map("selected_option_id") @db.VarChar(50)
  isCorrect   Boolean  @map("is_correct")
  attemptedAt DateTime @default(now()) @map("attempted_at")

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([questionId])
  @@index([userId, questionId])
  @@index([attemptedAt])
  @@map("user_progress")
}

/// MockExam model - Stores mock examination sessions
model MockExam {
  id                   String     @id @default(uuid()) @db.Uuid
  userId               String     @map("user_id") @db.Uuid
  totalQuestions       Int        @map("total_questions")
  timeLimitMinutes     Int        @map("time_limit_minutes")
  passingScore         Int        @map("passing_score") // Percentage (e.g., 80 for 80%)
  categories           String     @db.Text // JSON stringified array or 'MIXED'
  difficulty           Difficulty?
  status               ExamStatus @default(IN_PROGRESS)
  startedAt            DateTime   @default(now()) @map("started_at")
  completedAt          DateTime?  @map("completed_at")
  timeRemainingSeconds Int?       @map("time_remaining_seconds")
  questions            String     @db.Text // JSON stringified array of question IDs
  answers              String     @default("{}") @db.Text // JSON { questionId: selectedOptionId }
  flaggedQuestions     String     @default("[]") @map("flagged_questions") @db.Text // JSON array
  score                Int?       // Final percentage score
  createdAt            DateTime   @default(now()) @map("created_at")
  updatedAt            DateTime   @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("mock_exams")
}

/// UserSettings model - User preferences and settings
model UserSettings {
  id                      String   @id @default(uuid()) @db.Uuid
  userId                  String   @unique @map("user_id") @db.Uuid

  // Appearance
  theme                   String   @default("light") @db.VarChar(20) // "light" or "dark"

  // Daily Goal
  dailyGoal               Int      @default(25) @map("daily_goal") // questions per day

  // Study Preferences
  showExplanations        Boolean  @default(true) @map("show_explanations")
  soundEffects            Boolean  @default(true) @map("sound_effects")

  // Email Notifications
  weeklyProgressReport    Boolean  @default(true) @map("weekly_progress_report")
  examReminders           Boolean  @default(true) @map("exam_reminders")

  // Study Reminders
  dailyStudyReminder      Boolean  @default(true) @map("daily_study_reminder")
  reminderTime            String?  @map("reminder_time") @db.VarChar(10) // "09:00 AM"

  // Push Notifications
  pushNotifications       Boolean  @default(true) @map("push_notifications")

  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_settings")
}

/// Subscription model - User subscription/payment info
model Subscription {
  id              String    @id @default(uuid()) @db.Uuid
  userId          String    @unique @map("user_id") @db.Uuid
  planName        String    @default("Season Pass") @map("plan_name") @db.VarChar(50)
  planPrice       Decimal   @default(399) @map("plan_price") @db.Decimal(10, 2)
  purchaseDate    DateTime  @map("purchase_date")
  paymentMethod   String    @map("payment_method") @db.VarChar(50) // "card", "gcash", "grab_pay", "paymaya", "manual"
  amountPaid      Decimal   @map("amount_paid") @db.Decimal(10, 2)
  transactionId   String?   @map("transaction_id") @db.VarChar(255) // PayMongo payment ID or manual ref
  referenceNumber String?   @map("reference_number") @db.VarChar(50) // RG-xxxxx format
  paymentProvider String    @default("paymongo") @map("payment_provider") @db.VarChar(20) // "paymongo" or "manual"
  status          String    @default("active") @db.VarChar(20) // "active", "expired"
  expiresAt       DateTime? @map("expires_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([referenceNumber])
  @@map("subscriptions")
}

/// RefreshToken model - For JWT refresh token management
model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  token     String   @unique @db.VarChar(500)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

/// PaymentVerification model - Manual payment proof submission
model PaymentVerification {
  id                String   @id @default(uuid()) @db.Uuid
  userId            String   @map("user_id") @db.Uuid
  amount            Decimal  @db.Decimal(10, 2)
  paymentMethod     String   @map("payment_method") @db.VarChar(50) // "GCash", "Maya"
  referenceNumber   String   @map("reference_number") @db.VarChar(255) // User's transaction ref
  proofImageUrl     String?  @map("proof_image_url") @db.Text // Screenshot URL
  gcashNumber       String?  @map("gcash_number") @db.VarChar(20) // User's GCash number
  status            String   @default("pending") @db.VarChar(20) // "pending", "approved", "rejected"
  verifiedBy        String?  @map("verified_by") @db.Uuid // Admin user ID who verified
  verifiedAt        DateTime? @map("verified_at")
  rejectionReason   String?  @map("rejection_reason") @db.Text
  activationCode    String   @unique @map("activation_code") @db.VarChar(20) // Unique code
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([activationCode])
  @@map("payment_verifications")
}

/// Admin model - For admin users who verify payments
model Admin {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255) // Hashed password
  name      String   @db.VarChar(255)
  role      String   @default("admin") @db.VarChar(20)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([email])
  @@map("admins")
}

/// DailyPracticeUsage model - Track daily practice question usage for free tier limits
model DailyPracticeUsage {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String   @map("user_id") @db.Uuid
  date            DateTime @db.Date // Date in UTC
  questionsCount  Int      @default(0) @map("questions_count")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@unique([userId, date])
  @@index([userId, date])
  @@map("daily_practice_usage")
}

/// SeasonPassCode model - Pre-generated codes for e-book bundle redemption
model SeasonPassCode {
  id            String    @id @default(uuid()) @db.Uuid
  code          String    @unique @db.VarChar(20) // Redemption code (e.g., "RG-ABC123-XYZ789")
  isRedeemed    Boolean   @default(false) @map("is_redeemed")
  redeemedBy    String?   @map("redeemed_by") @db.Uuid // User ID who redeemed
  redeemedAt    DateTime? @map("redeemed_at")
  createdBy     String?   @map("created_by") @db.Uuid // Admin who generated the code
  batchId       String?   @map("batch_id") @db.VarChar(50) // For bulk generation tracking
  expiresAt     DateTime? @map("expires_at") // Optional expiration date
  notes         String?   @db.Text // Optional notes (e.g., "E-book bundle promo 2024")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([code])
  @@index([isRedeemed])
  @@index([batchId])
  @@map("season_pass_codes")
}

/// UserStreak model - Track user's daily activity streak
model UserStreak {
  id                String    @id @default(uuid()) @db.Uuid
  userId            String    @unique @map("user_id") @db.Uuid
  currentStreak     Int       @default(0) @map("current_streak")
  longestStreak     Int       @default(0) @map("longest_streak")
  lastActivityDate  DateTime? @map("last_activity_date") @db.Date
  streakRepairedAt  DateTime? @map("streak_repaired_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  @@index([userId])
  @@map("user_streaks")
}

/// DailyExplanationView model - Track explanation views for taste test feature
model DailyExplanationView {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String   @map("user_id") @db.Uuid
  date            DateTime @db.Date
  viewCount       Int      @default(0) @map("view_count")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@unique([userId, date])
  @@index([userId, date])
  @@map("daily_explanation_views")
}
